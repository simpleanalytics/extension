{
  "name": "Simple Analytics",
  "version": "1.0",
  "description": "Block your own requests so they don't count towards your stats in Simple Analytics",
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "128": "128.png"
  },
  "browser_action": {
    "default_title": "Simple Analytics"
  },
  "optional_permissions": [ "<all_urls>" ],
  "permissions": [
    "*://*.simpleanalytics.io/*",
    "*://*.simpleanalytics.com/*",
    "*://*.simpleanalytics.is/*",
    "*://*.simpleanalyticscdn.is/*",
    "*://*.simpleanalyticscdn.com/*",
    "webRequest",
    "webRequestBlocking",
    "declarativeContent",
    "storage",
    "activeTab"
  ]
}
